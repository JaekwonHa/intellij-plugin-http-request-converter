<idea-plugin>
  <id>com.tango.plugin.http-request-converter</id>
  <name>HTTP Request to cURL</name>
  <version>0.0.1</version>
  <vendor email="hazxz1116@gmail.com">JaekwonHa</vendor>

  <description><![CDATA[
      Convert Intellij HTTP Request to cURL<br>
      You can paste cURL command in clipboard
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="HttpToCurlAction" class="HttpToCurlAction" text="Convert HTTP Request to cURL"
            description="Convert HTTP Request to cURL">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>

</idea-plugin>
